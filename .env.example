# VMRS Parts Classification System - Environment Variables
# Copy this file to .env and fill in your actual values

# ==========================================
# REQUIRED: Anthropic API Configuration
# ==========================================

# Your Anthropic API key (required)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_api_key_here

# ==========================================
# OPTIONAL: Logging Configuration
# ==========================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ==========================================
# OPTIONAL: Directory Paths
# ==========================================

# Output directory (defaults to ./data/output)
# OUTPUT_DIR=data/output

# ==========================================
# OPTIONAL: Performance Settings
# ==========================================

# Maximum workers for parallel processing (future enhancement)
# MAX_WORKERS=4

# ==========================================
# OPTIONAL: Development Settings
# ==========================================

# Enable debug mode (additional logging and validation)
# DEBUG=false

# Dry run mode (process but don't save outputs)
# DRY_RUN=false
